{
  "name": "@gueterbahnhof/server",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "exports": {
    "./cli": "./src/cli.ts",
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:server": "pnpm tsx watch src/cli.ts server --app-dir \"$HOME/gueterbahnhof\"",
    "dev:tailwind": "postcss src/ui/assets/tailwind.css -w -o src/ui/assets/styles.css",
    "build": "rm -rf dist && mkdir dist && npm-run-all -p build:*",
    "build:server": "tsup src/cli.ts -d dist --format cjs",
    "build:assets": "mkdir dist/assets && postcss src/ui/assets/tailwind.css -o dist/assets/styles.css && cp src/ui/index.html dist/index.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.9",
    "commander": "^9.4.1",
    "express": "^4.19.2",
    "lowdb": "^7.0.1",
    "multer": "1.4.5-lts.1",
    "pm2": "^5.2.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@gueterbahnhof/common": "workspace:*",
    "@types/adm-zip": "^0.5.0",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.9",
    "@types/vhost": "^3.0.4",
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.15.13",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.6",
    "tsup": "^8.2.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
